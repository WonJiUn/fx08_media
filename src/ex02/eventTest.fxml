         <font>
            <Font size="18.0" />
         </font>
      </Button>
      <Button fx:id="btnStop" layoutX="453.0" layoutY="99.0" mnemonicParsing="false" onAction="#myStop" prefHeight="33.0" prefWidth="111.0" text="종료">
